{
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "copyfiles": "^2.4.1",
    "jest": "^27.4.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "copy-files": "copyfiles -u 1 src/**/input.txt dist/",
    "build": "npm run clean && tsc && npm run copy-files",
    "watch": "tsc -w & nodemon -q -w dist dist/day-${DAY}/main.js",
    "execute": "npm run build && node dist/day-${DAY}/main.js",
    "test": "jest"
  }
}
